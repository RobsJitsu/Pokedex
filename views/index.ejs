<!DOCTYPE html>
<html lang="pr-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Pokedex</title>
</head>

<body>
    <nav>
        </div>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/cadastro">Cadastro</a>
            </li>
        </ul>
    </nav>   
    <% if(message != "") {  %>
        <section id="message">
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
    <% }  %>

    <header>
        <h1>Pokedex</h1>
    </header>

    <main>
        <div class="container">
            <% pokedex.forEach(function(card, index) { %>
                <div class="card">
                    <a href="/detalhes/<%= index %>"><img src="<%= card.imagem %>" alt="Pokemons"></a>
                    <h2><%= card.nome %></h2>
                    <h4><%= card.tipo %></h4>
                </div>
            <% }) %>
        </div>
    </main>
    <footer>
    </footer>
    <script src="/js/script.js"></script>
</body>
</html>